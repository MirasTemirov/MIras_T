the prefix and postfix form.html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>The postfix and prefix form</title>
</head>
<body>
<script>
  let a = 1, b = 1;

  let c = ++a; // 2
  let d = b++; // 1

  alert('c=' + c)
  alert('d=' + d)
</script>
</body>
</html>
type conversions.html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Type conversions</title>
</head>
<body>
<script>
  alert("" + 1 + 0);  //10
  alert("" - 1 + 0);  //-1, "" becomes as 0
  alert(true + false); //1+0=1
  alert(6 / "3"); //2
  alert("2" * "3");  //6
  alert(4 + 5 + "px"); //9px
  alert("$" + 4 + 5); //$45
  alert("4" - 2); //2
  alert("4px" - 2); //NaN
  alert("  -9  " + 5);  //-9 5
  alert("  -9  " - 5);   //-14
  alert(null + 1); //1, null=0
  alert(undefined + 1);  //NaN, undefined->NaN
  alert(" \t \n" - 2);  //-2
</script>
</body>
</html>
